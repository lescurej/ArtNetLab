{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Artnetlab",
  "version": "0.1.0",
  "identifier": "com.johanlescure.artnetlab",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Artnetlab",
        "width": 1280,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Johan Lescure (92RUVKH33H)",
      "hardenedRuntime": true
    }
  }
}
